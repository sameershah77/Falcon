<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:layout_margin="@dimen/_4sdp"
    android:backgroundTint="@color/grey6"
    app:cardCornerRadius="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/setBadge"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/completion_badge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/setBadgeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Completion Badge"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/setBadge"
            app:layout_constraintStart_toStartOf="@+id/setBadge"
            app:layout_constraintTop_toBottomOf="@+id/setBadge" />

        <TextView
            android:id="@+id/setBadgeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="22/04/2024"
            android:textColor="@color/white2"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintEnd_toEndOf="@+id/setBadgeName"
            app:layout_constraintStart_toStartOf="@+id/setBadgeName"
            app:layout_constraintTop_toBottomOf="@+id/setBadgeName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>