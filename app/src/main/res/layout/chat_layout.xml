<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_chat_plate"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:backgroundTint="@color/grey6"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_6sdp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/layout_chat_img"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/boy"
        app:civ_border_color="@color/white2"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/layout_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:text="Sameer Shah"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toEndOf="@+id/layout_chat_img"
        app:layout_constraintTop_toTopOf="@+id/layout_chat_img" />

    <TextView
        android:id="@+id/layout_chat_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sameershah9167@gmail.com"
        android:textColor="@color/white2"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="@+id/layout_chat_name"
        app:layout_constraintTop_toBottomOf="@+id/layout_chat_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
