<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/assign_task_plate"
    android:orientation="vertical"
    android:layout_margin="@dimen/_4sdp"
    android:background="@drawable/assign_task_design"
    android:padding="@dimen/_10sdp">
    <TextView
        android:id="@+id/rv_design_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:text="Google Messages lets you text anyone from anywhere across devices, with suggested replies, to-dos, search, and group RCS chats. It also offers end-to-end encryption, real-time spam protection, Project Task"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/line_2"/>

    <TextView
        android:id="@+id/rv_design_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Priority"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/line_2"/>

    <TextView
        android:id="@+id/rv_design_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Deadline"/>

</LinearLayout>